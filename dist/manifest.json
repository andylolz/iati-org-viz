{
  "name": "IATI Organisation File Visualiser",
  "version": "0.0.9",
  "description": "Visualise IATI organisation files from the comfort of your own browser.",
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [{
    "js": ["js/js.js"],
    "matches": ["*://*.iatiregistry.org/dataset*", "*://*.iatiregistry.org/publisher/*"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": ["css/css.css", "fonts/*", "img/*", "json/*"],
  "page_action": {
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "128": "img/icon-128.png"
    },
    "default_title": "Toggle IATI Org File Visualiser"
  }
}
